{
  "name": "burstlet",
  "version": "0.1.0",
  "description": "AI-powered content creation and distribution platform",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:module": "jest --testPathPattern=modules",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "db:generate": "cd backend && npx prisma generate",
    "db:migrate": "cd backend && npx prisma db push",
    "db:studio": "cd backend && npx prisma studio",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "clean:build": "rm -rf frontend/.next backend/dist",
    "deploy": "npm run build && npm run deploy:frontend && npm run deploy:backend",
    "deploy:frontend": "cd frontend && vercel --prod",
    "deploy:backend": "cd backend && doctl apps create-deployment",
    "postinstall": "npm run setup"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vanmoose/burstlet.git"
  },
  "keywords": [
    "ai",
    "content-creation",
    "social-media",
    "automation",
    "video-generation",
    "saas"
  ],
  "author": "Van Moose",
  "license": "UNLICENSED"
}