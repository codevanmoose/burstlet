# Environment Variables Example
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
PORT=3001

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=# Generate with: openssl rand -base64 32
JWT_SECRET=# Generate with: openssl rand -base64 32
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# AI Services
HAILUOAI_API_KEY=
HAILUOAI_WEBHOOK_URL=http://localhost:3001/api/v1/ai/webhooks/hailuoai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# YouTube
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/youtube/callback

# Twitter/X
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/twitter/callback

# TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/tiktok/callback

# Instagram
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/instagram/callback

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_
STRIPE_PRICE_BASIC_MONTHLY=price_
STRIPE_PRICE_BASIC_ANNUAL=price_
STRIPE_PRICE_PRO_MONTHLY=price_
STRIPE_PRICE_PRO_ANNUAL=price_
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email (Resend)
RESEND_API_KEY=
EMAIL_FROM=noreply@burstlet.com

# Storage (Supabase Storage)
STORAGE_BUCKET=burstlet-media
STORAGE_REGION=us-east-1

# Monitoring
MONITORING_ENABLED=true
MONITORING_COLLECT_INTERVAL=60
MONITORING_RETENTION_DAYS=30
ALERT_EMAIL=alerts@burstlet.com
SLACK_WEBHOOK_URL=

# External Services
SENTRY_DSN=
POSTHOG_API_KEY=

# Security
RATE_LIMIT_ANONYMOUS=10
RATE_LIMIT_AUTHENTICATED=60
RATE_LIMIT_PRO=300
RATE_LIMIT_ENTERPRISE=1000
ENCRYPTION_KEY=# Generate with: openssl rand -hex 32
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_WEBHOOKS_ENABLED=false
FEATURE_ADMIN_PANEL_ENABLED=false

# Development
DEBUG=false
FORCE_SSL=false